@using SmartEstimate.Nav
@using SmartEstimate.Modal
@inherits LayoutComponentBase

<PageTitle>SmartEstimate</PageTitle>

<div class="h-screen bg-gray-100">
    <SideNav>
        @foreach (var option in @NavOptions)
        {
            <NavOption 
                OptionPath=@option.OptionPath
                Title=@option.Title
                IconType=@option.IconType
            />
        }
    </SideNav>
    <ContentView>
        @Body
    </ContentView>
    <Modal />
</div>

@code {
    public struct IconType<T> where T : BaseSvgIcon { }

    public struct NavOptionInput
    {
        public string OptionPath;
        public string Title;
        public Type IconType;
    }

    public NavOptionInput[] NavOptions = new NavOptionInput[]
    {
        new NavOptionInput()
        {
            OptionPath = "/quotes",
            Title = "Quotes",
            IconType = typeof(ClipboardIcon)
        },
        new NavOptionInput()
        {
            OptionPath = "/contact",
            Title = "Contact",
            IconType = typeof(UsersIcon)
        },
        new NavOptionInput()
        {
            OptionPath = "/settings",
            Title = "Settings",
            IconType = typeof(SettingsIcon)
        },
    };
}