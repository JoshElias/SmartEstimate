@using Daemon.RazorUI.Modal
@using Daemon.RazorUI.Navigation
@using Daemon.RazorUI.Icons


@inherits LayoutComponentBase

<PageTitle>SmartEstimate</PageTitle>

<div class="h-screen bg-gray-100">
    <SideNav>
        <NavOption Path="/quotes" Title="Quotes">
            <ClipboardIcon Class=@_iconClass />
        </NavOption>
        <NavOption Path="/contact" Title="Contact">
            <UsersIcon Class=@_iconClass />
        </NavOption>
        <NavOption Path="/settings" Title="Settings">
            <SettingsIcon Class=@_iconClass />
        </NavOption>
    </SideNav>
    <ContentView>
        @Body
    </ContentView>
    <Modal />
</div>

@code {
    private string _iconClass = "stroke-stone-300";
}