@using SMART.Common.CompanyManagement;


@namespace SO.Components.Projects

<h2 class="text-base font-semibold leading-7 text-gray-900">
    Shipping Address Details
</h2>

<div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-6">
    <div class="sm:col-span-3">
        <AddressElement
            Label="Location Name"
            Value=@ShipLocation!.LocationName
        />
    </div>
    <div class="sm:col-span-3"></div>
    <div class="sm:col-span-3">
        <AddressElement 
            Label="Email Address" 
            Value=@ShipLocation!.DefaultContact.DefaultEmail.DisplayAs
        />
    </div>

    <div class="col-span-3">
        <AddressElement 
            Label="Phone Number" 
            Value=@ShipLocation!.DefaultContact.DefaultPhone.DisplayAs
        />
    </div>
    <div class="col-span-full">
        <AddressElement 
            Label="Street Address" 
            Value=@ShipLocation!.DefaultAddress.Street
        />
    </div>
    <div class="col-span-full">
        <AddressElement 
            Label="Address Line 2" 
            Value=@ShipLocation!.DefaultAddress.StreetLine2
        />
    </div>

    <div class="sm:col-span-2 sm:col-start-1">
        <AddressElement 
            Label="City" 
            Value=@ShipLocation!.DefaultAddress.City
        />
    </div>

    <div class="sm:col-span-2">
        <AddressElement 
            Label="Province" 
            Value=@ShipLocation!.DefaultAddress.StateProvince
        />
    </div>

    <div class="sm:col-span-2">
        <AddressElement 
            Label="Postal Code" 
            Value=@ShipLocation!.DefaultAddress.PostalCode
        />
    </div>
</div>

@code {
    public ShipLocation? ShipLocation { get; set; }
}