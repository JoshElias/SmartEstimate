    private async Task OnSubmitClick() {
        if (!_editForm!.EditContext!.Validate()) {
            return;
        }

        if(Value == null) {
            await AddLocation();
        } else {
            await UpdateLocation();
        }
    }

    private void OnCancelClick() {
    }

    private async Task AddLocation() {
        _isSubmitting = true;
        Logger.LogInformation($"Creating new project: {Value.LocationName}");
        var newShipLocationFormView = await OrderApi
            .ShipLocation
            .AddShipLocation(
                Value.LocationName,
                Value.DefaultAddress.Street,
                Value.DefaultAddress.StreetLine2,
                Value.DefaultAddress.City,
                Value.DefaultAddress.StateProvince,
                Value.DefaultAddress.PostalCode,
                Value.DefaultAddress.AddressNotes
            );
        Logger.LogInformation($"Created new project: {Value.LocationName}");
        _isSubmitting = false;
    }
    
