@using Microsoft.AspNetCore.Components.Routing

@namespace SmartEstimate.Pages

<nav class="flex overflow-x-auto border-b border-white/10 py-4">
    <ul role="list" class="flex min-w-full flex-none gap-x-6 px-4 text-sm font-semibold leading-6 text-stone-700 sm:px-6 lg:px-8">
        <li>
            <NavLink 
                href=@($"/quotes/{QuoteId}")
                ActiveClass="text-sky-500"
                Match=NavLinkMatch.All
            >
                Overview
            </NavLink>
        </li>
        <li>
            <NavLink 
                href=@($"/quotes/{QuoteId}/shipping")
                ActiveClass="text-sky-500"
                Match=NavLinkMatch.All
            >
                Shipping
            </NavLink>
        </li>
    </ul>
</nav>

@code {
    [Parameter] 
    public int? QuoteId { get; set; }
}