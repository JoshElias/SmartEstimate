@page "/quotes/{quoteId:int}/shipping"
 
@namespace SmartEstimate.Pages

@inject QuoteStore QuoteStore


<QuoteDetailHeader Quote=@_quote/>

<div class="
  container
  mt-5 
  flex flex-col flex-1
  justify-between
">
  <div class="flex items-center justify-end gap-x-6">
    <button type="button" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
    <button type="submit" class="rounded-md bg-sky-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-500">Save</button>
  </div>  

  <QuoteDetailShippingOptions />
  <div class="border-t border-gray-300 mb-4"></div>

  <h2 class="text-base font-semibold leading-7 text-gray-900">Shipping Address</h2>
  <p class="mt-1 text-sm leading-6 text-gray-600">Please enter the customer's address</p>

    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <TextInput Label="Dealer Name" />
      </div>

      <div class="sm:col-span-3">
        <TextInput Label="Email Address" />
      </div>

      <div class="col-span-full">
        <TextInput Label="Street Address" />
      </div>

      <div class="sm:col-span-2 sm:col-start-1">
        <TextInput Label="Dealer Name" />
      </div>

      <div class="sm:col-span-2">
        <TextInput Label="Province" />
      </div>

      <div class="sm:col-span-2">
        <TextInput Label="Postal Code" />
    </div>
  </div>
</div>  


@code {

    private bool IsLoading = true;

    [Parameter]
    public int QuoteId { get; set; }


    private QuoteView _quote;

    protected override async Task OnInitializedAsync()
    {
        _quote = await QuoteStore.ReadableStore.GetById(QuoteId);
        IsLoading = false;
    }
}