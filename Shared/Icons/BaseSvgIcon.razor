@namespace SmartEstimate.Icons

<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=@($"{_defaultClass} {Class}")>
    @ChildContent
</svg>

@code {
    private string _defaultClass = "w-6 h-6";

    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
